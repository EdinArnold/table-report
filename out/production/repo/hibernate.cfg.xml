<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
        <property name="hibernate.connection.driver_class">org.impossible.postgres.jdbc.PGDriver</property>
        <property name="hibernate.connection.url">jdbc:postgresl://localhost:5432/sample</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>
        <property name="hbm2ddl.auto">create-drop</property>
        <mapping class="com.bazinga.persistance.entities.User"></mapping>
    </session-factory>
</hibernate-configuration>
